<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/page3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 배경 비율 조절을 위한 ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ratio_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/survival_note"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.8"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <ImageView
                android:id="@+id/survival_note_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/window_note" />

            <ImageView
                android:id="@+id/guide_line"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintHeight_percent="0.17"
                app:layout_constraintTop_toTopOf="@id/survival_note_background"
                app:layout_constraintStart_toStartOf="@id/survival_note_background"
                android:background="@null"
                />

            <TextView
                android:id="@+id/travel_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/guide_line"
                app:layout_constraintEnd_toEndOf="@id/guide_line"
                app:layout_constraintTop_toBottomOf="@id/guide_line"
                android:fontFamily="@font/nanum3"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="누군가는 밖에서 물자를 구해와야한다."
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/member_choose_guide_line"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.06"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/dameun_condition_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/travel_text"
                android:text="담은은..."
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/eunju_condition_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dameun_condition_text"
                android:text="은주는..."
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/soun_condition_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/eunju_condition_text"
                android:text="소운은..."
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/hyundong_condition_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/soun_condition_text"
                android:text="현동은..."
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                />

            <ImageButton
                android:id="@+id/travel_eunju"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:layout_constraintHeight_percent="0.18"
                app:layout_constraintWidth_percent="0.12"
                app:layout_constraintEnd_toStartOf="@id/member_choose_guide_line"
                app:layout_constraintBottom_toTopOf="@id/member_choose_guide_line"
                android:src="@drawable/eunju_head_ok"
                android:background="@null"
                />

            <ImageButton
                android:id="@+id/travel_dameun"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:layout_constraintHeight_percent="0.18"
                app:layout_constraintWidth_percent="0.12"
                app:layout_constraintEnd_toStartOf="@id/travel_eunju"
                app:layout_constraintBottom_toTopOf="@id/member_choose_guide_line"
                android:src="@drawable/dameun_head_ok"
                android:layout_marginRight="20dp"
                android:background="@null"
                />

            <ImageButton
                android:id="@+id/travel_hyundong"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:layout_constraintHeight_percent="0.18"
                app:layout_constraintWidth_percent="0.12"
                app:layout_constraintStart_toEndOf="@id/travel_soun"
                app:layout_constraintBottom_toTopOf="@id/member_choose_guide_line"
                android:src="@drawable/hyundong_head_ok"
                android:layout_marginLeft="20dp"
                android:background="@null"
                />

            <ImageButton
                android:id="@+id/travel_soun"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:layout_constraintHeight_percent="0.18"
                app:layout_constraintWidth_percent="0.12"
                app:layout_constraintStart_toEndOf="@id/member_choose_guide_line"
                app:layout_constraintBottom_toTopOf="@id/member_choose_guide_line"
                android:src="@drawable/soun_head_ok"
                android:background="@null"
                />

            <ImageButton
                android:id="@+id/next_button_page3to4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintWidth_percent="0.1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/next_button"
                android:background="@null"
                />

            <ImageButton
                android:id="@+id/previous_button_page3to2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintWidth_percent="0.1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/previous_button"
                android:background="@null"
                />

            <ImageButton
                android:id="@+id/close_button_page3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.06"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@null"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
