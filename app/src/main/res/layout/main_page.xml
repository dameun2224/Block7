<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ratio_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/start_background"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gamestart_image"
            android:src="@drawable/menu_gamestart"
            />

        <!-- selected_option -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/option_image"
            android:src="@drawable/menu_option"
            />

        <!-- selected_achive -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/explanation_image"
            android:src="@drawable/menu_explanation"
            />

        <!-- selected_more -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/developers_image"
            android:src="@drawable/menu_developers"
            />

        <!-- selected_exit -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/quit_image"
            android:src="@drawable/menu_quit"
            />


        <ImageButton
            android:id="@+id/startGame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintWidth_percent="0.15"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:clickable="true"
            android:contentDescription="Start Game"
            android:onClick="onStartGameClick"
            android:tag="startGameTag"
             />

        <ImageButton
            android:id="@+id/option_game"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintWidth_percent="0.15"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/startGame"
            app:layout_constraintStart_toStartOf="@id/startGame"
            android:tag="optionGameTag"
            android:contentDescription="Game Options"
            android:onClick="onOptionClick"
            />

        <ImageButton
            android:id="@+id/explanation_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintTop_toBottomOf="@id/option_game"
            app:layout_constraintStart_toStartOf="@id/option_game"
            android:background="@null"
            />



        <ImageButton
            android:id="@+id/developers_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintWidth_percent="0.15"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/explanation_button"
            app:layout_constraintStart_toStartOf="@id/explanation_button"
            />

        <ImageButton
            android:id="@+id/quit_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintWidth_percent="0.15"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/developers_button"
            app:layout_constraintStart_toStartOf="@id/developers_button"
            />
        
        <FrameLayout
            android:id="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.35"
            app:layout_constraintWidth_percent="0.15"
            android:background="@null"
            />

        <include layout="@layout/option_dialog"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
